@page "/"

<MudStack AlignItems="AlignItems.Center"  Justify="Justify.SpaceEvenly" Style="height: 100%;">
    <MudStack AlignItems="AlignItems.Center" Justify="Justify.Center">
        <MudText Typo="Typo.h5" Align="Align.Center">
            Device Connected: <b>@_connected</b>
        </MudText>
        <MudButtonGroup Variant="Variant.Outlined" Color="Color.Primary" >
            <MudIconButton OnClick="StartRecording" Disabled="@_connected"  Icon="@Icons.Material.Filled.Mic" Color="Color.Success" Size="Size.Small"/>
            <MudIconButton OnClick="StopRecording" Disabled="@_stopRecording" Icon="@Icons.Material.Filled.Stop" Color="Color.Warning" Size="Size.Small" />
        </MudButtonGroup>
    </MudStack>
    <Conversation Messages="_messages" />
</MudStack>
